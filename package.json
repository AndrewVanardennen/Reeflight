{
  "name": "reeflight",
  "version": "0.0.2",
  "description": "Remote controlled aquarium led light",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Andrew Vanardennen",
  "license": "CC-BY-NC-ND-4.0",
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "browser-sync": "^2.18.2",
    "del": "^2.2.2",
    "eslint": "^3.11.1",
    "eslint-config-es2015": "^1.1.0",
    "eslint-config-google": "^0.7.1",
    "eslint-plugin-html": "^1.7.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-inject-html-template": "^0.2.1",
    "gulp-vulcanize": "^6.1.0",
    "merge-stream": "^1.0.1",
    "pouchdb": "^6.1.1",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-inject-template": "^1.0.2",
    "rollup-plugin-json": "^2.1.0",
    "sw-precache": "^4.2.1"
  },
  "dependencies": {
    "backed": "^0.2.5",
    "backed-utils": "^0.0.2",
    "express": "^4.14.0",
    "opn": "^4.0.2",
    "web-clock-lite": "^0.0.1",
    "web-time-picker": "^0.1.8"
  },
  "backed": {
    "bundles": [
      {
        "src": [
          "src/reeflight-app.js"
        ],
        "dest": "dist/reeflight-app.js",
        "moduleName": "reeflight",
        "format": "iife",
        "plugins": {
          "inject-template": {}
        }
      }
    ],
    "sources": [
      {
        "src": [
          "node_modules/backed/dist/backed.js"
        ],
        "dest": "dist"
      },
      {
        "src": [
          "src/index.html"
        ],
        "dest": "dist"
      }
    ],
    "watch": [
      {
        "task": "copy",
        "src": [
          "src/**/*.html"
        ]
      },
      {
        "task": "build",
        "src": [
          "src/**/*.js"
        ]
      }
    ],
    "server": {
      "demo": "dist"
    }
  },
  "eslintConfig": {
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "require-jsdoc": [
        "error",
        {
          "require": {
            "FunctionDeclaration": false,
            "MethodDefinition": false,
            "ClassDeclaration": false,
            "ArrowFunctionExpression": false
          }
        }
      ]
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "browser": true
    },
    "extends": [
      "google",
      "es2015"
    ]
  }
}
